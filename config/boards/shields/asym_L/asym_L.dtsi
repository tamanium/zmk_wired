#include <dt-bindings/zmk/matrix_transform.h>

/ {
	core_a: connector{
		gpio-map =
			<1 0 &gpio0 1 0>,
			<2 0 &gpio0 2 0>,
			<3 0 &gpio0 3 0>,
			<4 0 &gpio0 4 0>,
			<5 0 &gpio0 5 0>,
			<6 0 &gpio0 6 0>,
			<7 0 &gpio0 7 0>,
			<8 0 &gpio0 8 0>,
			<9 0 &gpio0 9 0>,
			<10 0 &gpio0 10 0>,
			<11 0 &gpio0 11 0>,
			<12 0 &gpio0 12 0>,
			<13 0 &gpio0 13 0>,
			<14 0 &gpio0 14 0>,
			<15 0 &gpio0 15 0>,
			<26 0 &gpio0 26 0>,
			<27 0 &gpio0 27 0>,
			<28 0 &gpio0 28 0>,
			<29 0 &gpio0 29 0>;
	};
	
	chosen {
		zmk,battery = &vbatt;
		zmk,matrix_transform = &default_transform;
		zmk,kscan = &kscan0;
	};
	vbatt: vbatt{
		compatible = "zmk,battery-nrf-vddh";
	};
	default_transform: matrix_transform_0 {
		compatible = "zmk,matrix-transform";
		columns = <6>;
		rows = <4>;
		map = < 
			RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,4) RC(0,5)
			RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4) RC(1,5)
			RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4) RC(2,5)
			RC(3,0) RC(3,1) RC(3,2) RC(3,3) RC(3,4) RC(3,5)
		>;    //RC(row, col)
	};

	kscan0: kscan {
		compatible = "zmk,kscan-gpio-matrix";
		diode-direction = "col2row";
		col-gpios =
			<&core_a  29 GPIO_ACTIVE_HIGH>,
			<&core_a   6 GPIO_ACTIVE_HIGH>,
			<&core_a  11 GPIO_ACTIVE_HIGH>, 
			<&core_a  12 GPIO_ACTIVE_HIGH>, 
			<&core_a   9 GPIO_ACTIVE_HIGH>, 
			<&core_a   8 GPIO_ACTIVE_HIGH>;
		row-gpios =
			<&core_a  13 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>,
			<&core_a  14 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>,
			<&core_a  15 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>,
			<&core_a   7 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>;
	};
};
